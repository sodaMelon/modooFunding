<script type="text/javascript">
function product_search() {

	if (document.frm23.key.value == "") {

		alert("검색 할 상품명을 입력해주세요");

		document.frm23.key.focus();

	} else {

		document.frm23.action = "../doofun/commu/1/" + document.frm23.key.value;
		document.frm23.submit();
	}
}
</script>
